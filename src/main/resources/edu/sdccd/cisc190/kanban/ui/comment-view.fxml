<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox
    maxHeight="150.0"
    maxWidth="300.0"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="edu.sdccd.cisc190.kanban.ui.CommentController"
    stylesheets="/rootstyle.css, /dialog-style.css"
    styleClass="message-window"
    spacing="10"
>
    <VBox spacing="5" VBox.vgrow="ALWAYS">
        <Label styleClass="common-field-label">AUTHOR: </Label>
        <TextField fx:id="authorField" promptText="Author"/>

        <Label styleClass="common-field-label">DESCRIPTION: </Label>
        <TextArea fx:id="commentArea" maxHeight="Infinity" VBox.vgrow="ALWAYS" promptText="Comment description..."/>
    </VBox>

    <HBox alignment="BOTTOM_RIGHT" prefHeight="40.0" prefWidth="30.0" spacing="10">
        <Button defaultButton="true" text="OK" onAction="#addComment" minWidth="70"/>
        <Button cancelButton="true" text="Cancel" onAction="#closeWindow" minWidth="70"/>
    </HBox>
</VBox>