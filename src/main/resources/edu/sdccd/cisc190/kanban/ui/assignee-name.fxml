<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox
        alignment="CENTER"
        maxHeight="150.0"
        maxWidth="300.0"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="edu.sdccd.cisc190.kanban.ui.AssigneeController"
        stylesheets="/dialog-style.css"
        styleClass="message-window"
>
    <Label styleClass="baseline-message" wrapText="true" text="Please provide a name for the asignee."/>
    <TextField fx:id="assigneeField" promptText="Name"> </TextField>
    <HBox alignment="BOTTOM_RIGHT" prefHeight="40.0" prefWidth="30.0" spacing="10">
        <Button defaultButton="true" text="OK" onAction="#changeAssignee" minWidth="70"/>
        <Button cancelButton="true" text="Cancel" onAction="#closeWindow" minWidth="70"/>
    </HBox>
</VBox>